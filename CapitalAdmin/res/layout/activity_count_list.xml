        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_view"
        android:layout_marginBottom="@dimen/spinner_item_parent_view_margin_left"
        android:layout_marginLeft="@dimen/spinner_item_parent_view_margin_left"
        android:layout_marginRight="@dimen/spinner_item_parent_view_margin_left"
        android:dividerHeight="2dp"  -->
</RelativeLayout>