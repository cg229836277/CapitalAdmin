<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_white" >
    
    <TextView android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/CostIncomeItemTextStyle"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.5"/>
    
    <TextView android:id="@+id/count_number_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/container_item_margin_size"
        android:layout_marginRight="@dimen/container_item_margin_size"
        style="@style/CostIncomeItemTextStyle"/>
    
    <Button android:id="@+id/delete_item_button"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_weight="0.2"
        android:textSize="@dimen/cost_income_text_size"
        android:textColor="@color/white"
        android:layout_margin="@dimen/container_item_margin_size"
        android:text="删除"/>

</LinearLayout>
